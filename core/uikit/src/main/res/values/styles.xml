<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.Material3.Light">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ProgressBarStyle.Button">
<!--        <item name="android:indeterminateDrawable">@drawable/button_progress_bar</item>-->
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputHint" parent="TextAppearance.MaterialComponents.Caption">
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/pink2</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/pink2</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
</resources>